PowerShell -ExecutionPolicy Unrestricted -Command "Write-Host 'Choose an unlock method for BitLocker:' -ForegroundColor Cyan; Write-Host '1. Use a PIN' -ForegroundColor Yellow; Write-Host '2. Use a Security Key (e.g., USB drive)' -ForegroundColor Yellow; $choice = Read-Host 'Enter your choice (1 or 2)'; if ($choice -eq '1') { Write-Host 'You selected PIN-based unlock.' -ForegroundColor Green; $unlockMethod = 'PIN'; $pin = Read-Host 'Enter an alphanumeric PIN (at least 6 characters)'; if ($pin.Length -lt 6) { Write-Error 'Invalid PIN. It must be at least 6 characters.'; Exit 1 } } elseif ($choice -eq '2') { Write-Host 'You selected Security Key (USB drive) unlock.' -ForegroundColor Green; $unlockMethod = 'SecurityKey'; $usbDrivePath = Read-Host 'Enter the path to the USB drive (e.g., E:)'; if (-not (Test-Path $usbDrivePath)) { Write-Error 'Invalid USB drive path.'; Exit 1 } } else { Write-Error 'Invalid choice. Exiting.'; Exit 1 }; $systemDrives = Get-Volume | Where-Object { $_.DriveLetter -ne $null -and $_.FileSystem -eq 'NTFS' -and $_.DriveType -eq 'Fixed' }; foreach ($drive in $systemDrives) { $driveLetter = $drive.DriveLetter + ':'; Write-Host ('Checking BitLocker status for drive: ' + $driveLetter) -ForegroundColor Cyan; $bitlockerStatus = Get-BitLockerVolume -MountPoint $driveLetter | Select-Object -ExpandProperty ProtectionStatus; if ($bitlockerStatus -eq 1) { Write-Host ('BitLocker is already enabled on drive: ' + $driveLetter) -ForegroundColor Green } else { Write-Host ('BitLocker is not enabled on drive: ' + $driveLetter + '. Enabling it now...') -ForegroundColor Yellow; if ($unlockMethod -eq 'PIN') { Enable-BitLocker -MountPoint $driveLetter -Pin $pin -EncryptionMethod XtsAes256 -RecoveryKeyPath ('C:\BitLockerRecoveryKey_' + $driveLetter.Trim(':') + '.txt'); Write-Host ('BitLocker has been enabled on drive: ' + $driveLetter + ' with a PIN.') -ForegroundColor Green } elseif ($unlockMethod -eq 'SecurityKey') { Enable-BitLocker -MountPoint $driveLetter -StartupKeyPath $usbDrivePath -EncryptionMethod XtsAes256 -RecoveryKeyPath ('C:\BitLockerRecoveryKey_' + $driveLetter.Trim(':') + '.txt'); Write-Host ('BitLocker has been enabled on drive: ' + $driveLetter + ' with a security key.') -ForegroundColor Green } } }"
